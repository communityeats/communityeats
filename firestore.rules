// firestore.rules
service cloud.firestore {
  match /databases/{database}/documents {
    function isParticipant(conversationId) {
      return request.auth != null &&
        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participant_uids;
    }

    match /conversations/{conversationId} {
      allow read: if isParticipant(conversationId);
      allow create, update, delete: if false; // server (Admin SDK) does this

      match /messages/{messageId} {
        allow read: if isParticipant(conversationId);
        allow create: if isParticipant(conversationId)
          && request.resource.data.author_uid == request.auth.uid
          && request.resource.data.body is string
          && request.resource.data.body.size() > 0
          && request.resource.data.body.size() <= 2000;
        allow update, delete: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
